.slides {
  height: 380rpx;
}

.slides navigator,
.slides image {
  min-width: 100%;
  height: 100%;
}

.grids {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
  background-color: #fff;
}

.grids .item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 33.3333333333%;
  height: 250rpx;
  border-bottom: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.item image {
  width: 70rpx;
  height: 70rpx;
}

.item text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}
